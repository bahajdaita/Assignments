<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">My Blog</a>
            <a href="/create-post" class="btn btn-success">+ Create New Post</a>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold">All Blog Posts</h1>
        <div class="row mt-4">
            <% posts.forEach(post => { %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card shadow-lg mb-4">
                        <div class="card-body">
                            <h3 class="card-title text-primary"><%= post.title %></h3>
                            <p class="card-text"> <%= post.content.length > 150 ? post.content.slice(0, 150) + "..." :  post.content %></p>
                            <p class="text-muted fst-italic">By <%= post.author %> | <%= post.date %></p>
                            <div class="d-flex justify-content-between mt-3">
                                <a href="/edit-post/<%= post.id %>" class="btn btn-warning">‚úè Edit</a>
                                <a href="/api/posts/delete/<%= post.id %>" class="btn btn-danger">üóë Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>